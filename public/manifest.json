{
    "manifest_version": 3,
    "name": "Icon Preview Tool",
    "version": "1.0.0",
    "description": "Preview icons as floating elements",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_title": "Icon Preview Tool",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png"
    }
}
